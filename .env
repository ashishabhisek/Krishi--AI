# ============================================
# KrishiAI Backend - Environment Configuration
# ============================================
# Copy this file to .env and update the values

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=krishiai_db
DB_USER=postgres
DB_PASSWORD=your_postgres_password_here

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000
NODE_ENV=development

# ============================================
# JWT AUTHENTICATION
# ============================================
# Must be at least 32 characters long for security
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_EXPIRE=7d

# ============================================
# EMAIL CONFIGURATION (Gmail)
# ============================================
# For Gmail: Use App Password (not regular password)
# How to get: https://myaccount.google.com/apppasswords
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password_here

# ============================================
# SMS CONFIGURATION (Twilio)
# ============================================
# Get these from: https://www.twilio.com
# Account SID: Found in Account > Settings
# Auth Token: Found in Account > Settings
# Phone Number: Purchased from Twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# FRONTEND URL (CORS)
# ============================================
FRONTEND_URL=http://localhost:3000

# ============================================
# OPTIONAL: External APIs
# ============================================
# For AI features (if implementing)
# OPENAI_API_KEY=your_openai_key_here

# For weather information
# WEATHER_API_KEY=your_weather_api_key_here
